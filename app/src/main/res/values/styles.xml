<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/button_long_normal</item>
    </style>

    <!-- Customized element style. -->
    <style name="button_long_normal" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/button_long_normal</item>
    </style>

    <style name="button_long_special" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/button_long_special</item>
    </style>

    <style name="button_round_back" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:drawableTop">@drawable/ic_chevron_left_black</item>
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:layout_marginStart">26dp</item>
        <item name="android:background">@drawable/button_round_back</item>
    </style>

    <style name="title_font">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
