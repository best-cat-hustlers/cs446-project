<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/button_long_normal</item>
    </style>

    <!-- Customized element style. -->
    <style name="button_long_normal" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/button_long_normal</item>
    </style>

    <style name="button_long_special" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/button_long_special</item>
    </style>

    <style name="button_round_back" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:drawableTop">@drawable/ic_chevron_left_black</item>
        <item name="android:background">@drawable/button_round</item>
    </style>

    <style name="button_round_settings" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:drawableTop">@drawable/ic_settings_black</item>
        <item name="android:background">@drawable/button_round</item>
    </style>

    <style name="ai_difficulty_radio_button" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:background">@drawable/radio_button_background</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="title_font">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="secondary_text_font">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
